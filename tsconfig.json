{
  "extends": "./tsconfig-checks.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ES6",
    "target": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.js"
  ]
}
